/* pages/study/answer/question_list/question_list.wxss */
input {
  border-bottom: 2rpx solid #cccccc;
}
.header {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #cccccc;
  padding: 20rpx;
  background-color: rgb(245,245,245);
}
.header .header_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}
.header .header_item .header_item_text {
  margin-left: 10rpx;
}
.header_item_text_active {
  font-weight: 700;
  font-size: 38rpx;
}

.btn {
  display: block;
  position: absolute;
  top: 30%;
  right: 20%;
  border: 2rpx solid #06AE56;
}
.main {
  width: 90%;
  margin: 0 auto;
  color: #666666;
  font-size: 36rpx;
}
label {
  display: block;
}
.main .question {
  font-size: 34rpx;
  margin: 20rpx 0 20rpx 0;
}
.main .input-answer {
  font-size: 36rpx;
  margin-bottom: 25rpx;
  display: flex;
}
.main .input-answer span:nth-child(1){
  color: #147BEB;
}
.submit {
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
}

.resutl-true {
  color: #06AE56;
}
.resutl-false {
  color: #D4237A;
}
.real-answer {
  color: #147BEB;
  margin: 20rpx 0;
}
.anlyize {
  color: #147BEB;
}
.choose-item {
  margin-bottom: 20rpx;
}
.radio {
  margin-left: 20rpx;
}
.bottom_nav {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
}
.bottom .edit {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
}
.bottom .edit .edit_text {
  width: 80%;
  background-color: rgb(0,191,255);
  height: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  border-radius: 20rpx;
}
.aaa {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 300rpx auto;
  font-size: 50rpx;
  color:rgb(0,191,255);
}