/* pages/study/study_home/study_home.wxss */

@keyframes around {
  from {
   margin-left: 100%;
  }
  to {
   /* var接受传入的变量 */
   margin-left: -200%;
  }
 }
 
.marquee_container{
  background-color: #11A9D8;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  width: 100%;
}

.marquee_text{
  color:#fff;
  font-size: 40rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 10s;  /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function:linear;
}
.close {
  position: absolute;
  right: 0;
  top: 0;
}


page {
  width: 100%;
  height: 100%;
  position: relative;
}

.nav {
  display: flex;
}

.nav .left_con {
  flex: 2;
}

.schoollogo {
  margin-top: 20rpx;
  padding: 44rpx 0 0 60rpx;
  letter-spacing: 5rpx;
}

.schoollogo image {
  display: inline-block;
  width: 56rpx;
  height: 56rpx;
  vertical-align: middle;
}

.schoollogo text {
  padding-left: 15rpx;
  color: #878787;
  font-weight: 550;
}

.menu_top {
  display: flex;
  padding: 50rpx 0 0 25rpx;
}

.menu_top .menu_list {
  padding: 0 5rpx;
  flex: 1;
}

.menu_top .menu_list .iconfont {
  font-size: 70rpx;
  margin-bottom: 10rpx;
}

.menu_top .menu_list .iconlianxi_ {
  color: #1A99DC;
}

.menu_top .menu_list .iconbijiben {
  color: #D4237A;
}

.menu_top .menu_list .iconchaxun {
  color: #20EF46;
}

.menu_top .menu_list view {
  color: #666666;
  font-size: 27rpx;
  text-align: center;
}

.menu_bottom {
  display: flex;
  margin-top: 10rpx;
}

.menu_bottom .menu_list {
  flex: 1;
  margin-left: 22rpx;
}

.menu_bottom .menu_list .iconfont {
  font-size: 70rpx;
  margin-bottom: 10rpx;
}

.menu_bottom .menu_list view {
  color: #666666;
  font-size: 27rpx;
  text-align: center;
}

.nav .right_con {
  box-sizing: border-box;
  padding: 20rpx 15rpx 0 0;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.nav .right_con image {
  width: 274rpx;
  height: 274rpx;
}

/* 下面内容 */
.menu_wrap {
  position: absolute;
  bottom: 0;
  width: 100%;

}

.menu_wrap .menu_wrap_list {
  padding: 5rpx;
}

.menu_wrap .clickZone {
  box-sizing: content-box;
  /* width: 80%; */
  /* margin: 0 auto; */
  padding: 10rpx 0 10rpx 40rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 20rpx solid rgb(230, 244, 252);
}

.menu_wrap .clickZone .iconfont {
  font-size: 60rpx;
  padding-right: 20rpx;
  vertical-align: middle;
}

.menu_wrap .clickZone .text {
  font-size: 40rpx;
  letter-spacing: 5rpx;
  color: #666666;
  font-weight: 600;
}

.menu_wrap .clickZone .right_choose {
  padding-right: 40rpx;
}

.menu_wrap .hiddenZone {
  /* width: 80%; */
  padding-left: 40rpx;
  margin: 0 auto;
  display: none;
  border-bottom: 5rpx solid rgb(230, 244, 252);
  /* background-color: rgb(230,244,252); */
}