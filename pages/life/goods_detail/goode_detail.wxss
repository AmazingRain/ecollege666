  color: rgb(180, 174, 174);
}
.cang{
  width: 100rpx;
  height: 150rpx;
  font-size: 35rpx;
  margin-left: 60rpx;
  color: rgb(180, 174, 174);
  float: left;
}
.gouwu{
  width: 80rpx;
  height: 150rpx;
