.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0rpx;
  height: 660rpx;
}
.abtn {
  width: 100%;
  height: 90rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  line-height: 90rpx;
  text-align: center;
  display: flex;
  background: rgba(255,255,255,.8);
  justify-content: space-between;
}
.confirm {
  color: #1AAD19;
}
.cont {
  width: 100%;
  /* height: 389rpx; */
  height: 570rpx;
}
.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}
.address {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-bottom: 1rpx solid #f1f1f1;
}

.school {
  margin-top: 30rpx;
  display: flex;
  height: 80rpx;
}
.s-des {
  flex: 1;
}
.s-main {
  flex: 6;
}
.s-main input {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 5rpx;
  border: 2rpx solid #ccc;
  box-shadow: 2rpx 2rpx 4rpx #ccc;
  padding: 5rpx 0 5rpx 10rpx;
}
.s-main .hidden {
  position: absolute;
  left: 21%;
  top: 58%;
  width: 530rpx;
  z-index: 999;
  background-color: #fff;
}
.s-main .hidden .s-item {
  padding: 10rpx;
}
.s-main .hidden .s-item:nth-child(1) {
  padding-top: 10rpx;
  background-color: #DBDBDC;
}
.s-main .hidden .s-item:hover {
  background-color: #E8E8E9;
}