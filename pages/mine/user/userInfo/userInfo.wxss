/* pages/users/userInfo/userInfo.wxss */
page {
  background-color: #E6F4FC;
  position: relative;
}
.userPic_wrap {
  margin-top: 30rpx;
  display: flex;
}
.userPic_wrap .des {
  flex: 1;
}
.userPic_wrap .userPic {
  flex: 5;
  
}
.userPic_wrap .userPic image {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #fff;
} 
.info {
  width: 80%;
  margin: 0 auto;
}

.title {
  padding: 30rpx 0 30rpx 0;
  border-bottom: 3rpx solid #ccc;
}
.item_wrap {
  display: flex;
  
}
.item_wrap .item_list {
  display: flex;
  flex: 1;
  margin-top: 20rpx;
  height: 80rpx;
  /* border-bottom: 2rpx solid #ccc; */
}
.item_wrap .item_list:nth-child(1) {
  padding: 0 20rpx 0 0;
}
.item_list .item_text {
  flex: 1;
  
}
.item_list input {
  flex: 3;
  border: 2rpx solid #ccc;
  margin-left: 20rpx;
  border-radius: 5rpx;
  box-shadow: 2rpx 2rpx 4rpx #ccc;
  padding: 15rpx 0; 
  background-color: #fff;
}
.item_list picker {
  flex: 3;
  border: 2rpx solid #ccc;
  margin-left: 20rpx;
  border-radius: 5rpx;
  box-shadow: 2rpx 2rpx 4rpx #ccc;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.item {
  margin-top: 30rpx;
  display: flex;
  height: 80rpx;
}
.item .des {
  flex: 1;
}
.item picker {
  flex: 6;
  margin-left: 5rpx;
  border-radius: 5rpx;
  border: 2rpx solid #ccc;
  box-shadow: 2rpx 2rpx 4rpx #ccc;
  padding: 5rpx 0 5rpx 10rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.item input {
  flex: 6;
  margin-left: 5rpx;
  border-radius: 5rpx;
  border: 2rpx solid #ccc;
  box-shadow: 2rpx 2rpx 4rpx #ccc;
  padding: 5rpx 0 5rpx 10rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.renzheng {
  margin-top: 100rpx;
}
.btn {
  margin: 100rpx 0 0 200rpx;
  width: 338rpx;
  height: 100rpx;
  background-color: #00BFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 30rpx;
  justify-content: space-around;
}
