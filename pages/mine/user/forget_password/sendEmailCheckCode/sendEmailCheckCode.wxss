.input {
  width: 70%;
  margin: 0 auto;
  display: flex;
  border: 4rpx solid #4EACEC;
  border-radius: 50rpx;
  margin-bottom: 40rpx;
  background-color: #EFEFEF;
  overflow: hidden;
}
.input:nth-child(1) {
  margin-top: 150rpx;
}
.input input{
  flex: 4;
  height: 100rpx;
  padding-left: 40rpx;
  font-size: 38rpx;
}
.input .iconfont {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;  
  color: #707070;
  font-size: 50rpx;
}
.btn {
  margin: 100rpx 0 0 200rpx;
  width: 338rpx;
  height: 100rpx;
  background-color: #00BFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 30rpx;
  justify-content: space-around;
}
