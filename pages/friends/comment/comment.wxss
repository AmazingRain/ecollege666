.main {
  width: 90%;
  margin: 0 auto;
  padding: 10rpx;
}

.item {
  display: flex;
  color: #666666;
  font-family: Arial, Helvetica, sans-serif;
}

.replyContent {
  display: flex;
}

.userPic {
  flex: 1;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  padding-top: 20rpx;
}

.userPic image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.item>.commentZone {
  flex: 8;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.commentZone {
  flex: 8;
  padding: 15rpx 0;
}

.commentZone .comment_header {
  display: flex;
  justify-content: space-between;
  color: #666666;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.comment_con .content {
  margin-right: 30rpx;
  font-size: 30rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
}

.time {
  float: 7;
  font-size: 28rpx;
  color: #ccc;
  margin-top: 15rpx;
}

.icon {
  flex: 3;
  display: flex;
  justify-content: flex-end;
}

.icon .iconfont {
  margin-right: 5rpx;
}

.icon .num {
  margin-right: 20rpx;
}

.open,
.close {
  color: 666;
  font-size: 26rpx;
  margin: 10rpx 0;
}

.send_wrap {
  width: 90%;
  margin: 0 auto;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
}

.s-input {
  flex: 7;
  height: 70rpx;
  border: 1px solid #ee2;
  border-radius: 15rpx;
  margin: 0 20rpx 0 30rpx;
  padding-left: 20rpx;
  line-height: 35rpx;
  float: left;
}

.btn {
  flex: 1;
  height: 70rpx;
  background-color: #ee2;
  border-radius: 15rpx;
  font-size: 30rpx;
}