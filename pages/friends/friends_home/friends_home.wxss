/* pages/friends/friends_home/friends_home.wxss */
page {
  background-color: #E6F4FC;
}
.nav {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  /* border: 2rpx solid #000; */
}
.nav .text {
  flex: 2;
  margin-left: 10rpx;
  font-size: 48rpx;
}
.nav .input {
  flex: 7;
  background-color:rgba(196, 196, 192, 0.336);
  border-radius: 50rpx;
  margin-right: 10rpx;
  font-size: 40rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav .iconfont {
  margin-left: 5rpx;
  flex: 1;
  font-size: 50rpx;
  color: #666;
}
.item {
  width: 676rpx;
  height: 102rpx;
  margin: 30rpx auto;
  background-color: #fff;
  border-radius: 102rpx;
  display: flex;
  align-items: center;
}
.item .userpic {
  flex: 1;
  
}
.item .userpic image {
  width: 94rpx;
  height: 102rpx;
  border-radius: 102rpx;
}
.item .userNickname {
  flex: 5;
  padding-left: 30rpx;
  color: #707070;
}
.item .iconfont {
  flex: 1;
  width: 46rpx;
  height: 46rpx;
  font-size: 50rpx;
  text-align: left;
}
.text {
  color: #666;
  margin-right: 30rpx;
}